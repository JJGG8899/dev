<% layout('layout') -%>

      <section class="login-logo row">
  			<div class="col-md-4 col-md-offset-4 col-xs-6 col-xs-offset-3">
  				<div class="login-logo-img">
  					<img src="/images/logo.svg" alt="logo-img" />
  				</div>
  				<div class="login-logo-content">
  					<h2> Welcome to UX Finder </h2>
  				</div>
  			</div>
  		</section>

  		<section class="login-form row">
  			<div class="col-md-4 col-md-offset-4 col-xs-10 col-xs-offset-1">
  				<form class="form-horizontal" role="form" action="/users/login" method="post">
  	        <div class="input-group">
  	            <span class="input-group-addon"><i class="fa fa-envelope" aria-hidden="true"></i></span>
  	            <input type="email" class="form-control" name="email" placeholder="Email">
  	        </div>
  					<div class="input-group">
  	            <span class="input-group-addon"><i class="fa fa-lock" aria-hidden="true"></i></span>
  	            <input type="password" class="form-control" name="password" placeholder="Password">
  	        </div>
  					<div class="form-group form-content">
  						<p><a href="#"> Forgot password? </a></p>
  	        </div>
  	        <div class="form-group row form-button">
  	          <div class="col-sm-12 controls">
  	            <!-- <a href="/users/register" class="btn"> Login </a> -->
                <button type="submit" name="submit" class='btn'>
                  Login
                </button>
  	          </div>
  	        </div>
  					<div class="form-group form-content">
  						<p>Don't have account yet?<a href="/users/register"> Create user </a></p>
  	        </div>
  	      </form>
  			</div>
  		</section>


