<% layout('layout') -%>

<section class="page-header">
  <div class="container">
    <h2> Edit Profile </h2>
  </div>
</section>

<section class="edit-profile-wrapper">
  <div class="row">
    <div class="col-md-4 col-sm-6 col-xs-12">
      <div class="user-avatar">
        <img src="/images/defaultAvatar.svg" alt="" />
      </div>
      <form action="/users/profile/edit"
        method="post" >
        <div class="form-group">
          <label> User Name: </label>
          <input type="text"
            class="form-control"
            name="userName"
            value = "<%= user.profile.userName %>"
            placeholder="User Name" />
        </div>
        <div class="form-group">
          <label> Email: </label>
          <input type="email"
            class="form-control"
            name="userEmail"
            value = "<%= user.email %>"
            disabled />
        </div>
        <button type="submit" name="submit"
          class='btn btn-success'> Update
        </button>
      </form>
    </div>
  </div>
</section>
