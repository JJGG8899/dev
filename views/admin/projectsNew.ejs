<% layout('layout') -%>
<h2 class="page-header"> Add New Project </h2>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <form action="/admin/projects/new"
          method="post"
          enctype="multipart/form-data" >
      <div class="form-group">
        <label> Project Title: </label>
        <input type="text" class="form-control"
          name="prjTitle" placeholder="Project Title">
      </div>
      <div class="form-group">
        <label> Project City: </label>
        <input type="text" class="form-control"
          name="prjCity" placeholder="San Jose, CA">
      </div>
      <div class="form-group">
        <label> Project Address: </label>
        <input type="text" class="form-control"
          name="prjAddress" placeholder="Project Address">
      </div>
      <div class="form-group">
        <label> Project Type:</label>
        <select class="form-control" name="prjType">
          <option value='Touch Table'> Touch Table </option>
          <option value='Digital Signage'> Digital Signage </option>
          <option value='Touch Wall'> Touch Wall </option>
          <option value='Video Wall'> Video Wall </option>
        </select>
      </div>
      <div class="form-group">
        <label> Project Application:</label>
        <select class="form-control" name="prjApplication">
          <option value='Entertainment'> Entertainment </option>
          <option value='Education'> Education </option>
          <option value='Office'> Office </option>
          <option value='Public Place'> Public Place </option>
        </select>
      </div>
      <div class="form-group">
        <label> Project Access:</label>
        <select class="form-control" name="prjAccess">
          <option value='Public'> Public </option>
          <option value='Private'> Private </option>
        </select>
      </div>
      <div class="form-group">
        <label> Project Description: </label>
        <textarea name="prjDescription" rows="20" class="form-control"></textarea>
      </div>
      <div class="form-group">
        <label> Project Picture: </label>
        <input type="file" class="form-control"
          name="prjPicture" placeholder="Upload Project Picture">
      </div>
      <button type="submit" name="submit"
          class='btn btn-success'> Submit
      </button>
    </form>
  </div>
</div>
